function ProfileInfo() {
  const [activeProfile, setActiveProfile] = useState(null);

  const handleProfileClick = (index) => {
    if (activeProfile === index) {
      // If the same profile is clicked, close it
      setActiveProfile(null);
    } else {
      // If a different profile is clicked, open it
      setActiveProfile(index);
    }
  };

  return (
    <div className="mt-2 flex flex-col mx-auto max-w-screen-xl   px-4">
  {profiles.map((profile, index) => (
    <div key={index} className="mb-6">
      <div className="flex flex-col md:flex-row items-center">
        <img
          src={profile.photo}
          alt={`Фотография ${profile.name}`}
          className="w-40 h-40 object-cover rounded-full mb-4 md:mr-4"
        />
        <div>
          <h2 className="text-3xl font-bold text-[#333] mb-4">
            {profile.name}
          </h2>
          <button
            onClick={() => handleProfileClick(index)}
            className="text-blue-600 hover:underline focus:outline-none"
          >
            {activeProfile === index ? "Скрыть информацию" : "Показать информацию"}
          </button>
          {activeProfile === index && (
            <>
              <h3 className="text-xl font-semibold">Образование:</h3>
              <ul className="text-[#333] mt-3">
                {profile.education.map((item, index) => (
                  <li key={index}>{item}</li>
                ))}
              </ul>
              <h3 className="text-xl font-semibold">Профессиональная квалификация и опыт:</h3>
              <ul className="text-[#333] mt-3">
                {profile.experience.map((item, index) => (
                  <li key={index}>{item}</li>
                ))}
              </ul>
              <h3 className="text-xl font-semibold">Научные труды:</h3>
              <ul className="text-[#333] mt-3">
                {profile.publications.map((item, index) => (
                  <li key={index}>{item}</li>
                ))}
              </ul>
            </>
          )}
        </div>
      </div>
    </div>
  ))}
</div>

  );
}

export default ProfileInfo;
